	<!-- Script to Activate the Carousel -->
	<script type="text/javascript">
		$('.carousel').carousel({
			interval : 5000
		//changes the speed
		});
		$(document).ready(function(){
		<%if(chklog == false){%>
			$('.log-form').show();
		<%} else{%>
			$('.user-form').show();
		<%}%>
		CanvasJS.addColorSet("reg_bdc_color_set",
			      [//colorSet Array
			      "#dd4b4b",
			      "#e0003b",
			      "#e21b50",
			      "#e5295b",
			      "#ee4169",
			      "#e9577f",
					"#ec698a",
					"#ea96ad",
			     ]); 
		var chart = new CanvasJS.Chart("chartContainer", {
			colorSet:  "reg_bdc_color_set",
			axisX: {
				labelFormatter: function (e) {
					return CanvasJS.formatDate( e.value, "DDD");
				}
			},
			axisY:{
				lineThickness: 0,
				gridColor: "#e5e5e5",
				tickColor: "#e5e5e5",
				labelFontColor: "#e5e5e5",
				includeZero: false
			},
			data: [{
				type: "spline",
				dataPoints: [
				             <%for(var i = 0 ; i < hs.length ; i++){
				            	 var d = new Date(hs[i].date);
				            	%>
				             	{ x: new Date(<%=d.getFullYear()%>, <%=d.getMonth()%>, <%=d.getDate()%>), y: <%=hs[i].bdc_num%> },
							    <%}%>
							 ]
			}]
		});
		chart.render();
		
		var donorChart = new CanvasJS.Chart("donorChart", {
			dataPointWidth: 5,
			colorSet:  "reg_bdc_color_set",
			axisX: {
				labelFormatter: function (e) {
					return CanvasJS.formatDate( e.value, "DDD");
				}
			},
			axisY:{
				lineThickness: 0,
				gridColor: "#e5e5e5",
				tickColor: "#e5e5e5",
				labelFontColor: "#e5e5e5",
				includeZero: false
			},
			data: [{
				type: "column",
				dataPoints: [
				             <%for(var i = 0 ; i < hs.length ; i++){
				            	 var d = new Date(hs[i].date);
				            	%>
				             	{ x: new Date(<%=d.getFullYear()%>, <%=d.getMonth()%>, <%=d.getDate()%>), y: <%=hs[i].donate_num%> },
							    <%}%>
							 ]
			}]
		});
		donorChart.render();
		});
	</script>
