								<th class="text-center" width="10%">조회</th>
							</tr>
						</thead>
						<tbody>
							<%for(var i =0 ; i < qna_info.length ; i++){
							var d = new Date(qna_info[i].reg_date);
							var date;
							if(d.getDate()<10){
								date='0'+d.getDate();
							} else {
								date = d.getDate();
							}
							%>
							<tr>
								<th class="text-center" scope="row"><%=qna_info[i].qid%></th>
								<td class="text-center" onclick="clickQna(<%=qna_info[i].qid%>)" style="cursor:pointer"><%=qna_info[i].title%> [<%=qna_info[i].reply_num%>]</td>
								<td class="text-center"><%=qna_info[i].name%></td>
								<td class="text-center"><%=d.getFullYear()%>.<%=d.getMonth()+1%>.<%=date%></td>
